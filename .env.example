# Research Field Classifier Configuration
# Copy this file to .env and fill in your API keys

# ==================== LLM Provider ====================
# Options: openai, mistral, anthropic
LLM_PROVIDER=openai

# ==================== OpenAI Settings ====================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ==================== Mistral Settings (if using) ====================
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-large-latest

# ==================== Anthropic Settings (if using) ====================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ==================== Embedding Settings ====================
# Used by the embedding approach
EMBEDDING_MODEL=text-embedding-3-small

# ==================== Server Settings ====================
HOST=0.0.0.0
PORT=8080
DEBUG=false

# ==================== Default Approach ====================
# Options: single_shot, top_down, embedding
DEFAULT_APPROACH=single_shot

# ==================== Cache Settings ====================
CACHE_DIR=./cache
TAXONOMY_CACHE_TTL_HOURS=168
